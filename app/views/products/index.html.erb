<!--=== Title Page ===-->
<% provide(:title, 'Listing products') %>
<!--=== End Title Page ===-->

<!--=== Title Breadcrumbs ===-->
<% provide(:title_menu, 'Listing products') %>
<% provide(:title_sub_menu, 'Products') %>
<!--=== End Title Breadcrumbs ===-->

<%= render "shared/breadcrumb" %>

<!--=== Content Part ===-->
<div class="container">
  <!-- Search Result -->
  <div class="row-fluid search-page">

    <div class="row-fluid">
      <% count = 0 %>
      <% @products.each do |product| %>
          <div class="span6 booking-blocks">
            <div class="pull-left booking-img">
              <img src="assets/product/<%= product.image %>" alt="">
              <ul class="unstyled">
                <li><i class="icon-briefcase"></i> <%= product.price %>$</li>
                <li><i class="icon-map-marker"></i> New York, US</li>
              </ul>
            </div>
            <div style="overflow:hidden;">
              <h2><a href="#"><%= product.name %></a></h2>
              <ul class="unstyled inline">
                <li><i class="icon-star"></i></li>
                <li><i class="icon-star"></i></li>
                <li><i class="icon-star"></i></li>
                <li><i class="icon-star"></i></li>
                <li><i class="icon-star-empty"></i></li>
              </ul>
              <p><%= product.description %> <a href="#">detail</a></p>
            </div>
          </div>
          <% count = count + 1 %>
          <% if count % 2 == 0 %>
            </div><div class="row-fluid">
          <% end %>
      <% end %>
    </div>

    <%= will_paginate @products %>

  </div><!--/row-fluid-->
  <!-- //End Search Result -->
</div><!--/container-->
<!--=== End Content Part ===-->
